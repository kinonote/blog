<div class="container">
    <div class="col-md-12 top-articles bg-white">
        <% if @article.image_id.present? %>
            <%= image_tag attachment_url(@article, :image),class:'articite-image top-articles'%>
        <% else %>
        <%= image_tag 'blog-top.jpg',class:'img-fluid article-list-img' %>
            <% end %>
        <h1 ><%= @article.title%></h1>
        <div class="padding-bottom" style="padding:10px">
        <%= simple_format @article.body %>
            <p class="text-right">
                <%= @article.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
            </p>
        </div>
            <%= link_to '編集',edit_article_path(@article),class:'btn btn-info', style:'margin-right:10px; margin-bottom:10px' %>
            <%= link_to '削除する',article_path(@article), method: :delete, data: {confirm:'削除してもよろしいですか？'},class:'btn btn-danger',style:'margin-bottom:10px'%>
    </div>
</div>